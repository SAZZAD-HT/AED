@{
    Layout = null; // Disables the default layout
    ViewData["Title"] = "Bidding Confirmation";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@1.4.7/dist/flowbite.js"></script>

    <!-- Custom CSS and Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 50px;
        }

        .invoice-box {
            max-width: 800px;
            margin: auto;
            padding: 30px;
            border: 1px solid #eee;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
            font-size: 16px;
            line-height: 24px;
            font-family: 'Helvetica Neue', 'Helvetica', sans-serif;
            color: #555;
            background-color: white;
        }

        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .invoice-header img {
            max-width: 150px;
        }

        .invoice-title {
            text-align: center;
            margin-top: 20px;
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
        }

        .invoice-details {
            margin-top: 40px;
        }

        .invoice-details h3 {
            font-size: 18px;
            font-weight: 600;
        }

        .invoice-details p {
            font-size: 16px;
            line-height: 1.5;
        }

        .invoice-footer {
            text-align: center;
            margin-top: 40px;
        }

        @@media print {
            .no-print {
                display: none;
            }
            /* Hide the page URL during print */
            a[href]:after {
                content: none !important;
            }
        }
    </style>
</head>

<body>
    <div class="invoice-box">
        <div class="invoice-header">
            <img src="https://www.batbangladesh.com/imgs/BAT_Bangladesh_Logo.png" alt="Logo" />
        </div>

        <div class="invoice-title">
            Bidding Confirmation
        </div>

        <div class="invoice-details">
            <h3>Bid Details</h3>
            <p><strong>Item ID:</strong> @ViewBag.ItemMaster?.ItemId</p>
            <p><strong>Item Name:</strong> @ViewBag.ItemMaster?.ItemName</p>
           
            <p><strong>Brand:</strong> @ViewBag.ItemMaster?.Brand</p>
            <p><strong>Model:</strong> @ViewBag.ItemMaster?.Model</p>
            <p><strong>Colour:</strong> @ViewBag.ItemMaster?.Colour</p>
            <p><strong>Location:</strong> @ViewBag.ItemMaster?.Location</p>
            <p><strong>Bid Amount:</strong> @ViewBag.BidAmount</p>
            <p><strong>TIN Number:</strong> @ViewBag.TinNumber</p>
            <h3>Employee Info</h3>
            <p><strong>Employee Name:</strong> @ViewBag.Employee?.Name</p>
            <p><strong>Designation:</strong> @ViewBag.Employee?.Desigination</p>
        </div>

        <div class="invoice-footer">
            <button id="printBtn" class="bg-green-500 text-white px-5 py-2.5 rounded-lg hover:bg-green-600 no-print">Submit and Print</button>
        </div>
    </div>

    <script>
        document.getElementById('printBtn').addEventListener('click', function () {
            const bidData = {
                ItemID: '@ViewBag.ItemMaster?.ItemId',
                BiddingAmount: '@ViewBag.BidAmount',
                        TinNumber:'@ViewBag.TinNumber'
            };

            // AJAX call to submit data
            fetch('/Auction/SaveBid', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    
                },
                body: JSON.stringify(bidData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // If save is successful, trigger the print
                    window.print();
                    // Redirect to the confirmation page after printing
                            window.location.href = '/Auction/BiddingConfrmPage';
                } else {
                    alert('Bid submission failed: ' + data.message);
                }
            })
            .catch(error => {
                alert('An error occurred while saving the bid: ' + error.message);
            });
        });
    </script>
</body>

</html>
