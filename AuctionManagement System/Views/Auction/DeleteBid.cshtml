@{
    ViewData["Title"] = "Delete Employee Bid";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Fade In Animation */
       @@keyframes fadeIn {
            from { opacity: 0; transform: scale(0.9); }
            to { opacity: 1; transform: scale(1); }
        }
        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

        /* Slide In from top */
        @@keyframes slideDown {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        .slide-in {
            animation: slideDown 0.7s ease-out;
        }
    </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

    <!-- Delete Employee Bid Form Container -->
    <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full fade-in">
        <h2 class="text-2xl font-semibold text-center mb-6">Delete Employee Bid</h2>

        <!-- Success/Error Alert -->
        <div id="alertBox" class="hidden mb-4 p-4 rounded-lg text-white slide-in"></div>

        <!-- Form -->
        <form id="deleteBidForm" method="post" action="@Url.Action("DeleteBid", "Auction")">
            <div class="mb-4">
                <label for="EmpCode" class="block text-sm font-medium text-gray-700">Employee Code</label>
                <input id="EmpCode" name="EmpCode" type="text" required
                       class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 transition-transform duration-200"
                       placeholder="Enter Employee Code" />
            </div>

            <!-- Submit Button with Hover and Active Animations -->
            <div class="mt-6">
                <button type="submit" class="w-full bg-red-500 text-white font-semibold py-3 rounded-md hover:bg-red-600 focus:bg-red-700 transition duration-300 ease-in-out transform hover:scale-105 focus:scale-95">
                    Remove Bid
                </button>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#deleteBidForm').on('submit', function (e) {
                e.preventDefault();

                // Get the form data
                var empCode = $('#EmpCode').val().trim();

                // Send the AJAX request
                $.ajax({
                    url: '@Url.Action("DeleteBid", "Auction")',
                    type: 'POST',
                    data: { EmpCode: empCode },
                    success: function (response) {
                        showAlert(response.message, response.success ? 'bg-green-500' : 'bg-red-500');
                    },
                    error: function () {
                        showAlert("An error occurred while processing your request.", 'bg-red-500');
                    }
                });
            });

            // Function to show alert box with fade-in animation
            function showAlert(message, bgColor) {
                $('#alertBox').removeClass().addClass(`mb-4 p-4 rounded-lg text-white ${bgColor} slide-in`).text(message).fadeIn();
                setTimeout(function () {
                    $('#alertBox').fadeOut();
                }, 3000);
            }
        });
    </script>
</body>
</html>
