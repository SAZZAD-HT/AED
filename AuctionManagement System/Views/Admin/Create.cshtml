@model AuctionManagement_System.Models.ViewModels.AdminViewModel

<h2 class="text-2xl font-semibold mb-4">Create Admin</h2>

<!-- Success Alert Box -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline">@TempData["SuccessMessage"]</span>
    </div>
}

<!-- Validation Errors Alert Box -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <strong class="font-bold">Error:</strong>
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
            Name
        </label>
        <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="name" type="text" placeholder="Enter Name">
        <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="role">
            Role
        </label>
        <select asp-for="Role" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="role">
            <option value="">Select Role</option>
            <option value="Admin">Admin</option>
            <option value="SuperAdmin">SuperAdmin</option>
        </select>
        <span asp-validation-for="Role" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
            Email
        </label>
        <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="email" type="email" placeholder="Enter Email">
        <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="mobile">
            Mobile Number
        </label>
        <input asp-for="MobileNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" id="mobile" type="text" placeholder="Enter Mobile Number">
        <span asp-validation-for="MobileNumber" class="text-red-500 text-xs italic"></span>
    </div>

    <div class="flex items-center justify-between">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">
            Create Admin
        </button>
    </div>
</form>
