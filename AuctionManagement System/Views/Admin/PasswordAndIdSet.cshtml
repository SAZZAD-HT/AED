@model AuctionManagement_System.Models.ViewModels.PasswordSetViewModel
@{
    Layout = null; // Disables the default layout
    ViewData["Title"] = "Save Password";
}


<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="flex items-center justify-center min-h-screen">
    <div class="w-full max-w-md">
        <!-- BAT Logo in the center -->
        <div class="flex justify-center mb-8">
            <img src="https://www.batbangladesh.com/imgs/BAT_Bangladesh_Logo.png" alt="BAT Logo" class="h-24">
        </div>
        <h2 class="text-2xl font-semibold mb-4 text-center text-gray-800">Set Your Password</h2>
        <form asp-action="PasswordAndIdSet" method="post" class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    New Password
                </label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="Enter New Password">
                <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="confirmPassword">
                    Confirm Password
                </label>
                <input asp-for="ConfirmPassword" class="shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="confirmPassword" type="password" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="flex items-center justify-between">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded focus:outline-none focus:shadow-outline" type="submit">
                    Set Password
                </button>
            </div>
        </form>
    </div>
</div>
