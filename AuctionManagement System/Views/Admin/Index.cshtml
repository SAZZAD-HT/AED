@model IEnumerable<AuctionManagement_System.Models.ViewModels.AdminViewModel>

<h2 class="text-2xl font-semibold mb-4">Admin List</h2>

<table class="min-w-full bg-white">
    <thead>
        <tr class="w-full bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
            <th class="py-3 px-6 text-left">Name</th>
            <th class="py-3 px-6 text-left">Role</th>
            <th class="py-3 px-6 text-left">Email</th>
            <th class="py-3 px-6 text-left">Mobile</th>
            <th class="py-3 px-6 text-left">Status</th>
           @*  <th class="py-3 px-6 text-left">Actions</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-left">@admin.Name</td>
                <td class="py-3 px-6 text-left">@admin.Role</td>
                <td class="py-3 px-6 text-left">@admin.Email</td>
                <td class="py-3 px-6 text-left">@admin.MobileNumber</td>
                <td class="py-3 px-6 text-left">
                    @if (admin.IsActive)
                    {
                        <span class="text-green-600">Active</span>
                    }
                    else
                    {
                        <span class="text-red-600">Inactive</span>
                    }
                </td>
                <td class="py-3 px-6 text-left">
                   @*  <a href="/Admin/Details/@admin.UserId" class="text-blue-500">Details</a> | *@
                    @* <a href="/Admin/Delete/@admin.UserId" class="text-red-500">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/Create" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded">Add Admin</a>
